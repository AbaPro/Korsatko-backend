@using KorsatkoApp.ViewModels;
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<Student> SignInManager
@inject UserManager<Student> UserManager

@model HomeViewModel


<div class="content-wrapper">
	<div class="fading-bg">
		<div class="container pt-0 pt-md-5 pb-5">
			<div class="row py-5 flex-column-reverse flex-md-row">
				<div class="col-12 col-md-6 hero-text">
					<div class="heading text-center text-md-start mt-5 mt-md-0">
						تعلم البرمجة باحترافية
					</div>
					<div class="subheading">
						احترف البرمجة بمختلف مجالاتها من خلال دورات ومسارات كورساتكو الاحترافية للحصول على دخل ممتاز
						وفرص عمل حول العالم
					</div>
				</div>

				<div class="col-12 col-md-6 hero-image">
					<div class="brand-full">
						<div class="top">
							<img src="~/img/k-logo-t.png">
							<span>orsatko</span>
						</div>
						<div class="bottom">
							كــورســـــــاتكو
						</div>
					</div>
				</div>
			</div>
			@if (!SignInManager.IsSignedIn(User))
			{
				<div class="row mt-sm-5">
					<div class="hero-call-to-action">
						<a asp-area="Identity" asp-page="/Account/Register" class="btn bg-primary-gradient glow-on-hover">
						ابدا مشوارك الإحترافي
					</a>
				</div>
			</div>
			}

		</div>
	</div>

	<div class="fading-bg">
		<div class="container py-5">
			
			<div class="mt-5 mb-4">
				<h4>اجدد الكورسات</h4>
			</div>

			<div class="cards-container mb-5">

				@foreach (var c in Model.courses) {
					@* Card1 *@
					<a asp-action="CourseDetails" asp-route-id="@c.Id" class="card card-fixed scale-on-hover">
						<div class="card-image">
							@if (c.Picture == "" || c.Picture == null) {
								<img src="~/img/tracks/backend.svg" alt="Frontend">
							} else {
								<img src="~/Uploads/@c.Picture" alt="Frontend">
							}
						</div>

						<div class="card-body">
							<div class="card-title">
								@c.Name
							</div>
						</div>
					</a>
					@* Card1 *@
				}

			</div>



			<div class="mt-5 mb-4">
				<h4>افضل المدربين </h4>
			</div>

			<div class="cards-container  mb-5">

				@foreach (var c in Model.instructors) {
					@* Card1 *@
					<a asp-action="InstructorDetails" asp-route-id="@c.Id" class="card card-fixed scale-on-hover">
						<div class="card-image">
							@if (c.Gender == 'm' || c.Gender == null) {
								<img src="~/img/male.jpg" alt="Male">
							} else {
								<img src="~/img/female.jpg" alt="Female">
							}
						</div>

						<div class="card-body">
							<div class="card-title">
								@c.FullName
							</div>
						</div>
					</a>
					@* Card1 *@
				}

			
			</div>





			<div class="mt-5 mb-4">
				<h4>أحدث التقنيات</h4>
			</div>

			<div class="cards-container small mb-5">

				@for (int i = 0; i < 1; i++) {
					@* Card2 *@
					<a href="#" class="card card-fixed small scale-on-hover">
						<div class="card-image">
							<img src="~/img/courses/angular.svg" alt="Frontend">
						</div>

						<div class="card-body">
							<div class="card-title">
								Angular JS
							</div>
						</div>
					</a>
					@* Card2 *@

				}

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/android.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title">
							Android
						</div>
					</div>
				</a>

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/c_sharp.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title" style="direction: ltr;">
							C#
						</div>
					</div>
				</a>

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/node-js.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title">
							Node JS
						</div>
					</div>
				</a>

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/php.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title">
							PHP
						</div>
					</div>
				</a>

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/react.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title">
							React JS
						</div>
					</div>
				</a>

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/swift.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title">
							Swift
						</div>
					</div>
				</a>

				<a href="#" class="card card-fixed small scale-on-hover">
					<div class="card-image">
						<img src="~/img/courses/python.svg" alt="Frontend">
					</div>

					<div class="card-body">
						<div class="card-title">
							Python
						</div>
					</div>
				</a>

			</div>
		</div>
	</div>
</div>