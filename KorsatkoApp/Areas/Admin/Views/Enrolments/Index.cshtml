    <script src="~/areas/admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/areas/admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/areas/admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/areas/admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <script src="~/areas/admin/js/populate-datatable.js"></script>


    <script>
        const columnNames = [
            "الطالب",
            "الكورس",
            "الموعد",
            "وقت الاشتراك",
            "حالة الدفع",
        ];

        const entries = [
        @foreach (var item in Model)
        {
            @:{
            @:values: [
            @:"@item.student.FullName",
            @:"@item.session.course",
            @:"من @item.session.StartDate.Year-@item.session.StartDate.Month-@item.session.StartDate.Day إلى @item.session.EndDate.Year-@item.session.EndDate.Month-@item.session.EndDate.Day<br>من @item.session.EndDate.ToShortTimeString() إلى @item.session.EndTime.ToShortTimeString()",
            @:"@item.AddedOn.ToString()",
            @:"@item.PaymentStatus",
            @:],
            @:actions: {
            @:details: "@Url.Action("Details", new { /*id = item.Id*/ })",
            @:edit: "@Url.Action("Edit", new { /*id = item.Id*/ })",
            @:delete: "@Url.Action("Delete", new { /*id = item.Id*/ })",
            @:}
            @:},
        }
                                ];

        populateDataTable(columnNames, entries);
    </script>
}
