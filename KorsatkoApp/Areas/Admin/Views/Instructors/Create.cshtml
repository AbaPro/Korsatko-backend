@model KorsatkoApp.Models.Instructor

@{
	ViewData["Title"] = "Create";
}


<section class="container content-header mb-2">
    <div class="px-3 px-sm-2 px-lg-3">
        <div class="row mt-3 mb-1">
            <h1 class="arabic">إضافة مدرب</h1>
        </div>

        <div class="row">
            <ol class="breadcrumb arabic sm">
                <li class="breadcrumb-item">
                    <a href="#">الصفحة الرئيسية</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">المدربين</a>
                </li>
                <li class="breadcrumb-item">
                    مدرب جديد
                </li>
            </ol>
        </div>
    </div>
</section>



<section class="content pb-5">
    <div class="container">
        <form method="post" action="#" class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-6 form-group">
                        <label asp-for="FullName">
                            <span class="arabic">الاسم بالكامل</span>
                        </label>

                        <input type="text" asp-for="FullName" class="form-control arabic"
                               placeholder="عمرو عثمان الشرقاوي">

                        <div class="form-text text-danger">
                            <span asp-validation-for="FullName"></span>
                        </div>
                    </div>

                    <div class="col-8 col-md-4 form-group">
                        <label asp-for="NationalId">
                            <span class="arabic">الرقم القومي</span>
                        </label>

                        <input type="text" asp-for="NationalId" class="form-control arabic"
                               placeholder="30102034567890">

                        <div class="form-text text-danger">
                            <span asp-validation-for="NationalId"></span>
                        </div>
                    </div>


                    <div class="col-4 col-md-2 form-group">
                        <label asp-for="Gender">
                            <span class="arabic">النوع</span>
                        </label>

                        <select asp-for="Gender" class="custom-select">
                            <option value="" selected disabled>اختر</option>
                            <option value="M">ذكر</option>
                            <option value="F">أنثى</option>
                        </select>

                        <div class="form-text text-danger">
                            <span asp-validation-for="Gender"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 form-group">
                        <label asp-for="Email">
                            <span class="arabic">البريد الالكتروني</span>
                        </label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                            </div>

                            <input type="text" asp-for="Email" class="form-control"
                                   placeholder="amr.othman@example.com">

                            <div class="form-text text-danger">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 form-group">
                        <label asp-for="PhoneNumber">
                            <span class="arabic">رقم الهاتف</span>
                        </label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-phone"></i>
                                </span>
                            </div>

                            <input type="text" asp-for="PhoneNumber"
                                   class="form-control arabic" placeholder="01012312345">

                            <div class="form-text text-danger">
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-8 form-group">
                        <label asp-for="Qualifications">
                            <span class="arabic">الخبرات</span>
                        </label>

                        <input type="text" asp-for="Qualifications" class="form-control arabic" />

                        <div class="form-text text-danger">
                            <span asp-validation-for="Qualifications"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-2 form-group">
                        <label asp-for="ExperienceYears">
                            <span class="arabic">سنوات الخبرة</span>
                        </label>

                        <input type="number" min="0" max="50" asp-for="ExperienceYears" class="form-control arabic" />

                        <div class="form-text text-danger">
                            <span asp-validation-for="ExperienceYears"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="">
                    <input type="submit" value="إضافة" class="btn btn-primary px-3 arabic">
                    <a href="#" class="btn btn-outline-danger px-3 arabic">إلغاء</a>
                </div>
            </div>
        </form>

    </div>
</section>