<section class="content pb-5">
	<div class="container">
		<div class="card">
			<div class="card-body arabic">
				<div class="row">
					<div class="col-12 col-sm-8" id="tableButtons">
						<a class="btn btn-success" asp-action="Create">إضافة</a>
						<a class="btn btn-primary" asp-action="Print">طباعة</a>
					</div>
					
					<div class="col-12 col-sm-4">
						<input type="text" id="search" class="form-control d-inline w-100 w-sm-auto float-left"
							   placeholder="بحث">
					</div>
				</div>

				<table id="datatable" class="table table-hover">
					<thead class="thead-light">
						<tr>
							<th>الاسم بالكامل</th>
							<th>الجنس</th>
							<th>رقم الهاتف</th>
							<th>الرقم القومي</th>
							<th>تاريخ الميلاد</th>
							<th>البريد الإلكتروني</th>
							<th>تاريخ التسجيل</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model) {
							<tr>
								<td>@item.FullName</td>
								@if (item.Gender == 'f') {
									<td>انثى</td>
								} else {
									<td>ذكر</td>
								}
								<td>@item.PhoneNumber</td>
								<td>@item.NationalId</td>
								<td>@item.DateOfBirth</td>
								<td>@item.Email</td>
								<td>@item.AddedOn</td>

								<td class="text-nowrap">
									<a asp-action="Details" asp-route-id="@item.Id" class="btn icon-btn-sm btn-outline-primary m-1">
										<i class="fas fa-info"></i>
									</a>

									<a asp-action="Edit" asp-route-id="@item.Id" class="btn icon-btn-sm btn-outline-primary m-1">
										<i class="fas fa-edit"></i>
									</a>

									<a asp-action="Delete" asp-route-id="@item.Id" class="btn icon-btn-sm btn-outline-danger m-1">
										<i class="fas fa-trash"></i>
									</a>

								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>
