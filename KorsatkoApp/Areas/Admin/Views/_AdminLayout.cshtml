
@{
    string viewController = ViewContext.RouteData.Values["controller"].ToString();

    string[] navItemClasses = new string[4];

    switch (viewController)
    {
        case "Courses":
            navItemClasses[0] = "menu-is-opening menu-open";
            break;
        case "Instructors":
            navItemClasses[1] = "menu-is-opening menu-open";
            break;
        case "Students":
            navItemClasses[2] = "menu-is-opening menu-open";
            break;
        case "Enrolments":
            navItemClasses[3] = "menu-is-opening menu-open";
            break;
    }
}


<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Korsatko</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&family=Cairo:wght@300;400;700&display=fallback">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/areas/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/areas/admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/areas/admin/plugins/adminlte/css/adminlte-rtl.css">

    @await RenderSectionAsync("Styles", required: false)

    <link rel="stylesheet" href="~/areas/admin/css/style.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed rtl">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link active" asp-action="Index">
                        <p class="arabic">الصفحة الرئيسية</p>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">
                        <p class="arabic">الدعم التقني</p>
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-danger navbar-badge">8</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">
                            <p class="arabic xs">
                                8 إشعارات جديدة
                            </p>
                        </span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            <span class="arabic">
                                5 تنبيهات
                            </span>
                            <span class="float-left text-muted text-sm">3 mins</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-file mr-2"></i>
                            <span class="arabic">
                                3 تقارير
                            </span>
                            <span class="float-left text-muted text-sm">2 days</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">
                            <p class="arabic sm">
                                الإطلاع على جميع الإشعارات
                            </p>
                        </a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-action="Index" class="mt-3 mb-1 mx-4 d-flex justify-content-center glow-on-hover darken">
                <div class="sidebar-logo"></div>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">

                        <li class="nav-item">
                            <a asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="arabic sidebar-text">
                                    لوحة القيادة
                                </p>
                            </a>
                        </li>

                        <li class="nav-item @navItemClasses[0]">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p class="arabic sidebar-text">الكورسات</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Courses" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض الكورسات</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Sessions" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض المواعيد</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Courses" asp-action="Create" class="nav-link">
                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة كورس</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Sessions" asp-action="Create" class="nav-link">
                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة معاد لكورس</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @navItemClasses[1]">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-chalkboard-teacher"></i>
                                <p class="arabic sidebar-text">المدربين</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Instructors" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض المدربين</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Instructors" asp-action="Create" class="nav-link">
                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة مدرب</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @navItemClasses[2]">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-book-reader"></i>
                                <p class="arabic sidebar-text">الطلاب</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Students" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض الطلاب</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Students" asp-action="Create" class="nav-link">
                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة طالب</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @navItemClasses[3]">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-book-reader"></i>
                                <p class="arabic sidebar-text">الاشتراكات</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Enrolments" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض الاشتراكات</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Enrolments" asp-action="Create" class="nav-link">
                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة اشتراك</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div>
                <span class="arabic sm">
                    حقوق الطبع والنشر
                </span>
                <!-- <strong> -->
                &copy;
                2023
                Korsatko.
                <!-- </strong> -->
                <span class="arabic sm">
                    جميع الحقوق محفوظة.
                </span>
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->




    <script src="~/areas/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/areas/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/areas/admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/areas/admin/plugins/adminlte/js/adminlte.min.js"></script>

    <!-- ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    @await Component.InvokeAsync("NToastNotify")

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>